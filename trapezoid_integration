import numpy as np

def trapezoid_integral(f, a, b, N):
    h = (b - a) / N
    integral = 0.5 * (f(a) + f(b))
    for i in range(1, N):
        integral += f(a + i * h)
    integral *= h
    return integral

def f(x):
    return 4 / (1 + x**2)

if __name__ == "__main__":
    # Example usage
    N_values = [10, 100, 1000, 10000]
    for N in N_values:
        pi_approx = trapezoid_integral(f, 0, 1, N)
        print(f"N: {N}, Pi Approximation: {pi_approx}")
